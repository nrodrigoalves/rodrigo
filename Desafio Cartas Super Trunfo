#include <stdio.h>

int main() {
    // Variáveis para armazenar os dados da carta 1
    int populacao1, pontosTuristicos1;
    float area1, pib1;
    char codigoCarta1[4]; // ex: A01

    // Variáveis para armazenar os dados da carta 2
    int populacao2, pontosTuristicos2;
    float area2, pib2;
    char codigoCarta2[4]; // ex: B02

    // Cadastro da carta 1
    printf("Cadastro da Carta 1\n");
    printf("Código da carta (exemplo A01): ");
    scanf("%3s", codigoCarta1);

    printf("População: ");
    scanf("%d", &populacao1);

    printf("Área (km²): ");
    scanf("%f", &area1);

    printf("PIB (bilhões): ");
    scanf("%f", &pib1);

    printf("Número de pontos turísticos: ");
    scanf("%d", &pontosTuristicos1);

    printf("\n");

    // Cadastro da carta 2
    printf("Cadastro da Carta 2\n");
    printf("Código da carta (exemplo B02): ");
    scanf("%3s", codigoCarta2);

    printf("População: ");
    scanf("%d", &populacao2);

    printf("Área (km²): ");
    scanf("%f", &area2);

    printf("PIB (bilhões): ");
    scanf("%f", &pib2);

    printf("Número de pontos turísticos: ");
    scanf("%d", &pontosTuristicos2);

    printf("\n");

    // Exibição dos dados da carta 1
    printf("Dados da Carta 1 - Código: %s\n", codigoCarta1);
    printf("População: %d habitantes\n", populacao1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: R$ %.2f bilhões\n", pib1);
    printf("Pontos Turísticos: %d\n", pontosTuristicos1);

    printf("\n");

    // Exibição dos dados da carta 2
    printf("Dados da Carta 2 - Código: %s\n", codigoCarta2);
    printf("População: %d habitantes\n", populacao2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: R$ %.2f bilhões\n", pib2);
    printf("Pontos Turísticos: %d\n", pontosTuristicos2);

    return 0;
}
